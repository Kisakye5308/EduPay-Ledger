{
  "name": "edupay-ledger",
  "version": "1.0.0",
  "description": "Desktop-first school fee management system for Ugandan schools - Works offline, syncs when online",
  "private": true,
  "main": "electron/main.js",
  "author": {
    "name": "EduPay Team",
    "email": "support@edupay.ug"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:build:win": "npm run build && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "npm run build && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "npm run build && npm run electron:compile && electron-builder --linux",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@hookform/resolvers": "^3.3.2",
    "@sentry/nextjs": "^10.38.0",
    "@stellar/stellar-sdk": "^11.2.2",
    "@tailwindcss/forms": "^0.5.11",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.0.6",
    "dexie": "^4.0.1",
    "firebase": "^10.14.1",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "recharts": "^3.7.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "ug.edupay.ledger",
    "productName": "EduPay Ledger",
    "copyright": "Copyright Â© 2026 EduPay Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EduPay Ledger"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.finance",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "icon": "public/icons",
      "category": "Office",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "edupay-ledger"
    }
  }
}
